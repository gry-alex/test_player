<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageButton android:id="@+id/back_btn"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:onClick="BackBtnPressed"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/back_icon"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"/>
    <ImageButton android:id="@+id/aspect_ratio_btn"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_above="@id/exo_progress"
        android:onClick="ChangeAspectRatio"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_background"
        android:src="@drawable/fullscreen_icon"
        android:scaleType="fitXY"/>
    <ImageButton android:id="@+id/quality_btn"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_alignParentRight="true"
        android:layout_above="@id/exo_progress"
        android:onClick="OpenQualityView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_background"
        android:src="@drawable/quality_icon"
        android:scaleType="fitXY"/>
    <ImageButton android:id="@+id/prev_track"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:onClick="PreviusStream"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_background"
        style="@style/ExoMediaButton.Previous"/>
    <ImageButton android:id="@+id/next_track"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:onClick="NextStream"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_background"
        style="@style/ExoMediaButton.Next"/>
    <ImageButton android:id="@id/exo_play"
        android:layout_above="@id/exo_progress"
        android:layout_centerInParent="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_background"
        style="@style/ExoMediaButton.Play"/>

    <ImageButton android:id="@id/exo_pause"
        android:layout_above="@id/exo_progress"
        android:layout_centerInParent="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_background"
        style="@style/ExoMediaButton.Pause"
        />
    <com.google.android.exoplayer2.ui.DefaultTimeBar
        android:id="@id/exo_progress"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="@dimen/activity_vertical_margin"/>
</RelativeLayout>